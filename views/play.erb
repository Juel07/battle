<html>
  <head>
      <title>Battle</title>
      <link href="<%= url("/styles.css") %>" rel="stylesheet" type="text/css" />
  </head>
  <body class="container">
    <h1><%= @game.player1.name %> vs <%= @game.player2.name %></h1>
    <p><%= @game.curr_turn.name %>'s turn</p>
    <div class="container points">
        <h3><%= @game.player1.name %> = <%= @game.player1.player_points %>HP</h3>
        <h3><%= @game.player2.name %> = <%= @game.player2.player_points %>HP</h3>
    </div>
    <section class="container buttons">
        <a href="/attack">
            <p>Attack</p>
        </a>
    </section>
  </body>
</html>